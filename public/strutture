<body onload="loadStrutture()">

  <!-- HEADER -->
  <div class="header">
    <h1>Strutture</h1>
    <button onclick="window.location.href='dashboard.html'">Dashboard</button>
  </div>

  <!-- CONTENT -->
  <div class="content">

    <h2>Le tue strutture</h2>

    <div id="structuresList"></div>

    <!-- FORM AGGIUNTA -->
    <div class="form-box">
      <h3>Aggiungi nuova struttura</h3>

      <input id="nome" type="text" placeholder="Nome struttura">
      <input id="indirizzo" type="text" placeholder="Indirizzo">

      <button class="save-btn" onclick="addStructure()">Salva</button>
    </div>

  </div>

  <script>
    const db = firebase.firestore();
    let currentUser = null;

    function loadStrutture() {
      checkAuth();

      firebase.auth().onAuthStateChanged(user => {
        if (user) {
          currentUser = user;
          loadUserStructures();
        }
      });
    }

    function loadUserStructures() {
      const list = document.getElementById("structuresList");
      list.innerHTML = "Caricamento...";

      db.collection("strutture")
        .where("owner", "==", currentUser.uid)
        .get()
        .then(snapshot => {
          list.innerHTML = "";

          snapshot.forEach(doc => {
            const data = doc.data();

            const div = document.createElement("div");
            div.className = "structure";

            div.innerHTML = `
              <h3>${data.nome}</h3>
              <small>${data.indirizzo}</small><br>
              <button class="edit-btn" onclick="editStructure('${doc.id}', '${data.nome}', '${data.indirizzo}')">Modifica</button>
              <button class="delete-btn" onclick="deleteStructure('${doc.id}')">Elimina</button>
            `;

            list.appendChild(div);
          });
        });
    }

    function addStructure() {
      const nome = document.getElementById("nome").value.trim();
      const indirizzo = document.getElementById("indirizzo").value.trim();

      if (!nome || !indirizzo) {
        alert("Compila tutti i campi");
        return;
      }

      db.collection("strutture").add({
        nome,
        indirizzo,
        owner: currentUser.uid
      }).then(() => {
        document.getElementById("nome").value = "";
        document.getElementById("indirizzo").value = "";
        loadUserStructures();
      });
    }

    function editStructure(id, nome, indirizzo) {
      const nuovoNome = prompt("Modifica nome struttura:", nome);
      const nuovoIndirizzo = prompt("Modifica indirizzo:", indirizzo);

      if (!nuovoNome || !nuovoIndirizzo) return;

      db.collection("strutture").doc(id).update({
        nome: nuovoNome,
        indirizzo: nuovoIndirizzo
      }).then(() => loadUserStructures());
    }

    function deleteStructure(id) {
      if (!confirm("Sei sicuro di voler eliminare questa struttura?")) return;

      db.collection("strutture").doc(id).delete()
        .then(() => loadUserStructures());
    }
  </script>

